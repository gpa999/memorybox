<div class="comment-block">
  <% if comment.user.image.attached? %>
    <%= image_tag(rails_blob_path(comment.user.image), class:"user-comment-image comment-user")%>
  <% else %>
    <i class="far fa-user fa-user-comment comment-user"></i>
  <% end %>
  <a href="/users/<%= comment.user.id %>" class="comment-user"><%= comment.user.name %></a>
  <div class="comment-text"><%=simple_format(comment.text)%></div>
</div>
